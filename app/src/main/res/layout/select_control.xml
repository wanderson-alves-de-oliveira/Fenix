<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
      android:focusable="true"
    android:gravity="center_horizontal"
    android:focusableInTouchMode="true"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundobase"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tvMensagem"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:hint="OPTIONS"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FAFAFA"
                android:textSize="22sp"
                android:background="@drawable/preto"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/preto"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btfechar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/x"
                    android:text="Não" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/preto"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btMusic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:backgroundTint="#127127"
                android:background="@drawable/ic_nota"
                android:text="Não" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/preto"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btSon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:backgroundTint="#127127"
                android:background="@drawable/ic_son"
                android:text="Não" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>